extends layout

block content
    div.form-container
        form(method='POST')
            div.form-group
                label(for='name') Name:
                input#name.form-control(type='text', placeholder='Phones, Watchs, etc.' name='name' required value=(undefined===category ? '' : category.name) )
            div.form-group
                label(for='description') Description:
                input#description.form-control(type='text', placeholder='Description of category' name='description' required value=(undefined===category ? '' : category.description) )
            button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg